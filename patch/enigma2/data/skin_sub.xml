<skin>
	<fonts>
		<font filename="nmsbd2.ttf" name="subRegular" scale="90"/>
	</fonts>
	<!-- Subtitle effects -->
	<subtitles>
		<sub name="Subtitle_TTX" font="subRegular;52" foregroundColor="#ffffff" shadowColor="#40101010" shadowOffset="3,3" />
		<sub name="Subtitle_Regular" font="subRegular;52" foregroundColor="#DCDCDC" shadowColor="#40101010" shadowOffset="3,3" />
		<sub name="Subtitle_Bold" font="subRegular;52" foregroundColor="#DCDCDC" shadowColor="#40101010" shadowOffset="3,3" />
		<sub name="Subtitle_Italic" font="subRegular;52" foregroundColor="#DCAAAA" shadowColor="#40101010" shadowOffset="3,3" />
		<!-- omitting foregroundColor attribute will enable auto-assignment of color -->
	</subtitles>
</skin>

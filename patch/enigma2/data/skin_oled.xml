<skin>
	<fonts>
		<font filename="nmsbd2.ttf" name="oledRegular" scale="90"/>
		<font filename="nmsbd.ttf" name="oledDisplay" scale="90"/>
	</fonts>
	<!-- Color OLED screen (main) -->
	<screen name="InfoBarSummary" position="0,0" size="96,64" id="2">
		<widget source="session.CurrentService" render="Label" position="0,0" size="96,28" font="oledRegular;16" halign="center" valign="center" foregroundColor="#ff0400">
			<convert type="ServiceName">Name</convert>
		</widget>
		<widget source="session.Event_Now" render="Progress" pixmap="skin_default/bar_se.png" position="0,28" size="96,10" borderWidth="1" borderColor="#FFFFFF" backgroundColor="dark">
			<convert type="EventTime">Progress</convert>
		</widget>
		<widget source="global.CurrentTime" render="Label" position="0,38" size="96,26" font="oledRegular;32" halign="center" valign="center" foregroundColor="#f6ff00" backgroundColor="#000000" >
			<convert type="ClockToText">Format:%H:%M</convert>
		</widget>
		<widget source="session.RecordState" render="FixedLabel" text=" " position="0,38" zPosition="1" size="96,26">
			<convert type="ConfigEntryTest">config.usage.blinking_display_clock_during_recording,True,CheckSourceBoolean</convert>
			<convert type="ConditionalShowHide">Blink</convert>
		</widget>
	</screen>
	<!-- Color OLED screen (MainPicon) -->
	<screen  name="InfoBarSummaryPicon" position="0,0" size="96,64" id="2">
		<widget source="session.CurrentService" render="Picon" position="0,0" size="96,64" path="picon_oled" >
			<convert type="ServiceName">Reference</convert>
		</widget>	
	</screen>
	<!-- Color OLED screen (InfoBarMoviePlayer) -->
	<screen name="InfoBarMoviePlayerSummary" position="0,0" size="96,64" id="2">
		<widget source="session.CurrentService" render="Label" position="0,0" size="96,28" font="oledRegular;16" halign="center" valign="center" foregroundColor="#ff0400">
			<convert type="ServiceName">Name</convert>
		</widget>
		<widget source="session.Event_Now" render="Progress" pixmap="skin_default/bar_se.png" position="0,28" size="96,10" borderWidth="1" borderColor="#FFFFFF" backgroundColor="dark">
			<convert type="EventTime">Progress</convert>
		</widget>
		<widget source="global.CurrentTime" render="Label" position="0,38" size="96,26" font="oledRegular;32" halign="center" valign="center" foregroundColor="#f6ff00" backgroundColor="#000000" >
			<convert type="ClockToText">Format:%H:%M</convert>
		</widget>
		<widget source="session.RecordState" render="FixedLabel" text=" " position="0,38" zPosition="1" size="96,26">
			<convert type="ConfigEntryTest">config.usage.blinking_display_clock_during_recording,True,CheckSourceBoolean</convert>
			<convert type="ConditionalShowHide">Blink</convert>
		</widget>
	</screen>
	<!-- Color OLED screen (ChannelSelection) -->
	<screen name="ChannelSelection_summary" position="0,0" size="96,64" id="2">
		<widget source="session.CurrentService" render="Label" position="0,0" size="96,28" font="oledRegular;16" halign="center" valign="center" foregroundColor="#ff0400">
			<convert type="ServiceName">Name</convert>
		</widget>
		<widget source="session.Event_Now" render="Progress" pixmap="skin_default/bar_se.png" position="0,28" size="96,10" borderWidth="1" borderColor="#FFFFFF" backgroundColor="dark">
			<convert type="EventTime">Progress</convert>
		</widget>
		<widget source="global.CurrentTime" render="Label" position="0,38" size="96,26" font="oledRegular;32" halign="center" valign="center" foregroundColor="#f6ff00" backgroundColor="#000000" >
			<convert type="ClockToText">Format:%H:%M</convert>
		</widget>
		<widget source="session.RecordState" render="FixedLabel" text=" " position="0,38" zPosition="1" size="96,26">
			<convert type="ConfigEntryTest">config.usage.blinking_display_clock_during_recording,True,CheckSourceBoolean</convert>
			<convert type="ConditionalShowHide">Blink</convert>
		</widget>
	</screen>
	<!-- Color OLED screen (DVD) -->
	<screen name="DVDSummary" position="0,0" size="96,64" id="2">
		<widget source="session.CurrentService" render="Label" position="0,0" size="96,25" font="oledRegular;12" transparent="1" foregroundColor="#ff0400">
			<convert type="ServiceName">Name</convert>
		</widget>
		<widget name="DVDPlayer" position="0,26" size="96,12" font="oledRegular;10" transparent="1" />
		<widget name="Chapter" position="0,40" size="66,12" font="oledRegular;10" transparent="1" halign="left" />
		<widget source="session.CurrentService" render="Label" position="66,40" size="30,12" font="oledRegular;10" transparent="1" halign="right" >
			<convert type="ServicePosition">Position</convert>
		</widget>
		<widget source="session.CurrentService" render="Progress" pixmap="skin_default/bar_se.png" position="0,52" size="96,10" borderWidth="1"  borderColor="#FFFFFF" backgroundColor="dark">
			<convert type="ServicePosition">Position</convert>
		</widget>
	</screen>
	<!-- Color OLED screen (ChoiceBox) -->
	<screen name="ChoiceBox_summary" position="0,0" size="96,64" id="2">
		<widget source="parent.summary_list" render="Label" position="0,0" size="96,64" font="oledDisplay;10" foregroundColor="#0036ff" />
	</screen>	
	<!-- Color OLED screen (MessageBox) -->
	<screen name="MessageBox_summary" position="0,0" size="96,64" id="2">
		<widget source="parent.Text" render="Label" position="0,0" size="96,52" font="oledDisplay;10" halign="center" valign="center" foregroundColor="#0036ff" />
		<widget source="parent.selectedChoice" render="Label" position="0,50" size="96,14" font="oledDisplay;12" halign="center" valign="center" foregroundColor="#ff0078" />
	</screen>
	<!-- Color OLED screen (menus) -->
	<screen name="MenuSummary" position="0,0" size="96,64" id="2">
		<widget source="parent.title" render="Label" position="0,0" size="96,32" font="oledDisplay;15" halign="center" valign="center" foregroundColor="#0036ff" />
		<widget source="parent.menu" render="Label" position="0,32" size="96,32" font="oledDisplay;16" halign="center" valign="top" foregroundColor="#ff0078" >
			<convert type="StringListSelection" />
		</widget>
	</screen>	
	<!-- Color OLED screen (ServiceScan) -->
	<screen name="ServiceScanSummary" position="0,0" size="96,64" id="2">
		<widget name="Title" position="0,0" size="96,30" font="oledDisplay;14" transparent="1" foregroundColor="#0036ff" />
		<widget name="Service" position="0,30" size="96,20" font="oledDisplay;10" transparent="1" foregroundColor="#ff0078"  />
		<widget name="scan_progress" position="0,50" zPosition="1" pixmap="skin_default/bar_se.png" borderColor="#FFFFFF" borderWidth="1" size="96,12" backgroundColor="dark" />
	</screen>
	<!-- Color OLED screen (setup) -->
	<screen name="SetupSummary" position="0,0" size="96,64" id="2">
		<widget source="SetupTitle" render="Label" position="0,0" size="96,16" font="oledDisplay;10" foregroundColor="#0036ff" />
		<widget source="SetupEntry" render="Label" position="0,16" size="96,32" font="oledDisplay;10" foregroundColor="#ff0078" />
		<widget source="SetupValue" render="Label" position="0,48" size="96,16" font="oledDisplay;10" foregroundColor="#85ff77" />
	</screen>
	<!-- Color OLED screen (misc) -->
	<screen name="SimpleSummary" position="0,0" size="96,64" id="2">
		<widget source="parent.Title" render="Label" position="0,0" size="96,64" font="oledDisplay;14" halign="center" valign="center" foregroundColor="#0036ff" />
	</screen>
	<!-- Color OLED screen (standby) -->
	<screen name="StandbySummary" position="0,0" size="96,64" id="2">
		<widget source="global.CurrentTime" render="Label" position="0,0" size="96,64" font="oledDisplay;38" halign="center" valign="center"  foregroundColor="#0036ff">
			<convert type="ClockToText">Format:%H:%M</convert>
		</widget>
		<widget source="session.RecordState" render="FixedLabel" position="0,0" zPosition="1" size="96,64" text=" " foregroundColor="#0036ff">
			<convert type="ConfigEntryTest">config.usage.blinking_display_clock_during_recording,True,CheckSourceBoolean</convert>
			<convert type="ConditionalShowHide">Blink</convert>
		</widget>
	</screen>
	<!-- Color OLED screen (JobView) -->
	<screen name="JobView_summary" position="0,0" size="96,64" id="2">
		<widget source="parent.summary_job_name" render="Label" position="0,4" size="96,42" font="oledDisplay;14" foregroundColor="#0036ff" />
		<widget source="parent.summary_job_task" render="Label" position="0,22" size="96,26" font="oledDisplay;10" foregroundColor="#ff0078" />
		<widget source="parent.summary_job_progress" render="Progress" pixmap="skin_default/bar_se.png" borderColor="#FFFFFF" position="0,50" size="60,12" borderWidth="1" zPosition="1" />
		<widget source="parent.summary_job_progress" render="Label" position="60,50" size="36,12" font="oledDisplay;10" zPosition="2" halign="center" transparent="1" foregroundColor="#0036ff" >
			<convert type="ProgressToText" />
		</widget>
	</screen>
	<!-- Color OLED screen (Wizard) -->
	<screen name="WizardSummary" position="0,0" size="96,64" id="2">
		<widget source="text" render="Label" position="0,0" size="96,16" font="oledDisplay;14" transparent="1" foregroundColor="#0036ff" />
		<widget source="parent.list" render="Label" position="0,18" size="96,46" font="oledDisplay;12" foregroundColor="#ff0078" >
			<convert type="StringListSelection" />
		</widget>
	</screen>
</skin>
